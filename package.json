{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "A simple weather API application",
  "main": "server.js",
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "scripts": {
    "start": "node -r dotenv-safe/config server.js",
    "dev": "node -r dotenv-safe/config --watch server.js .env",
    "test": "node --test test/weather.js",
    "build": "npm install --omit=dev",
    "build_lambda": "npm install --omit-dev && zip -q lambda.zip handler.js package.json node_modules lib"
  },
  "dependencies": {
    "aws-serverless-express": "^3.4.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "express": "^5",
    "namespaced-console-logger": "^1.0.5",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.848.0",
    "supertest": "^7.1.1"
  },
  "author": "",
  "license": "ISC"
}
